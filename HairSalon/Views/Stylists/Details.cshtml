@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist
@using HairSalon.Models

<h2>Stylist Details</h2>
<hr />
<h3><strong>Stylist Name:</strong> @Html.DisplayFor(model => model.StylistName)
<br>
<strong>Description:</strong>
@Html.DisplayFor(model => model.Description)<h3>

@if (@Model.Clients.Count == 0)
{
  <h4>This stylist has no current clients</h4>
} 
else
{
  <h3>Clients:</h3>
  <ul>
    @foreach (Client client in Model.Clients)
    {
      <li>@Html.ActionLink($"{client.ClientName}", "Details", "Clients", new { id = client.ClientId })</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add client", "Create", "Clients")</p>
<p>@Html.ActionLink("Edit Stylist Profile", "Edit", new { id = Model.StylistId })</p>
<p>@Html.ActionLink("Delete Stylist", "Delete", new { id = Model.StylistId })</p>
<p>@Html.ActionLink("Back to list", "Index")</p>