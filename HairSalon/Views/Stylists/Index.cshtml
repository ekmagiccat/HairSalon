@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h1>Eau Claire's Stylists</h1>
<h4>Choose a stylist below:</h4>

@if (@Model.Count == 0)
{
  <h3>No current stylists are available</h3>
} 

<ul>
  @foreach(Stylist stylist in Model)
  {
    <li>@Html.ActionLink($"{stylist.StylistName}", "Details", new { id = stylist.StylistId })</li>
  }
</ul>

<p>@Html.ActionLink("Create a new stylist profile", "Create", "Stylists")</p>