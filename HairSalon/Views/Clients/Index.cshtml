@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h1>Current Clients</h1>

@if (@Model.Count == 0)
{
  <h3>There are no current clients</h3>
} 

<ul>
  @foreach(Client client in Model)
  {
    <li>@Html.ActionLink($"{client.ClientName}", "Details", new { id = client.ClientId })</li>
  }
</ul>

<p>@Html.ActionLink("Create a new stylist profile", "Create", "Stylists")</p>